<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_CONTACTDB_MESSAGE_DETAILS">
        <field
            name="id"
            type="hidden"
        />
        
        <field
            name="name"
            type="text"
            label="COM_CONTACTDB_FIELD_NAME_LABEL"
            description="COM_CONTACTDB_FIELD_NAME_DESC"
            size="40"
            class="inputbox"
            required="true"
        />
        
        <field
            name="email"
            type="email"
            label="COM_CONTACTDB_FIELD_EMAIL_LABEL"
            description="COM_CONTACTDB_FIELD_EMAIL_DESC"
            size="40"
            class="inputbox"
            required="true"
            validate="email"
        />
        
        <field
            name="subject"
            type="text"
            label="COM_CONTACTDB_FIELD_SUBJECT_LABEL"
            description="COM_CONTACTDB_FIELD_SUBJECT_DESC"
            size="60"
            class="inputbox"
            required="true"
        />
        
        <field
            name="message"
            type="textarea"
            label="COM_CONTACTDB_FIELD_MESSAGE_LABEL"
            description="COM_CONTACTDB_FIELD_MESSAGE_DESC"
            cols="80"
            rows="10"
            class="inputbox"
            required="true"
        />
        
        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC"
            size="22"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
        />
        
        <field
            name="published"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            default="1"
            class="chzn-color-state"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>
